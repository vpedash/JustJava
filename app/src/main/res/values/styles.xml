<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#7C4DFF</item>
    </style>
    <!-- Style for toppigs checkboxes -->
    <!--<style name="cream_checkbox" parent="Theme.AppCompat.Light">-->
        <!--<item name="colorControlNormal">@android:color/holo_green_light</item>-->
        <!--<item name="colorControlActivated">@android:color/holo_orange_dark</item>-->
    <!--</style>-->
    <!-- Style for Headers in app -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- For incremeant and decreament buttons -->
    <style name="QuantityButtonSizeStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    <!-- For 4 button (order, mail etc) -->
    <style name="FourButtonSizeStyle">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_marginLeft">16dp</item>
         <item name="android:layout_weight">1</item>
    </style>
</resources>
